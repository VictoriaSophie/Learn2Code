<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".LogIn">

    <TextView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"

        android:gravity="center" />
    <TextView
        android:id="@+id/withSocials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/signUp"
        android:text="or sign up with social media account:"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/withSocials">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:src="@drawable/google_icon"/>
    </LinearLayout>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:padding="20dp"
        android:hint="Email"
        android:background="#25000000"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:drawablePadding="20dp"
        android:drawableTint="#75ffffff"/>
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:hint="Username"
        android:background="#25000000"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:drawableTint="#75ffffff"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="20dp"
        android:padding="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="#25000000"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableRight="@drawable/ic_baseline_security_24"
        android:drawablePadding="20dp"
        android:drawableTint="#75ffffff"/>
    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginHorizontal="30dp"
        android:padding="20dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:background="#25000000"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableRight="@drawable/ic_baseline_security_24"
        android:drawablePadding="20dp"
        android:drawableTint="#75ffffff"/>
    <Button
        android:id="@+id/createAccButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/confirmPassword"
        android:text="Create Account"
        android:backgroundTint="@color/purple_200"
        android:layout_centerHorizontal="true"/>

    <!-- Button for Got account? -> log in -->
    <TextView
        android:id="@+id/signInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createAccButton"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:text="Already got an account? Sign in here: "
        android:textColor="@color/white" />
    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/createAccButton"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_toRightOf="@id/signInText"
        android:text="Log In"
        android:textStyle="bold"
        android:backgroundTint="#75D6FF"/>

</RelativeLayout>